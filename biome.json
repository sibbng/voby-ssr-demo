{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": ["*.ts", "*.tsx", "*.js", "*.jsx", "*.json"],
    "ignore": ["node_modules", "dist", ".output"]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": { "noNonNullAssertion": "off", "noUselessElse": "off" },
      "correctness": {
        "noUnusedImports": "warn"
      },
      "complexity": {
        "noBannedTypes": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noPrototypeBuiltins": "off"
      }
    }
  }
}
