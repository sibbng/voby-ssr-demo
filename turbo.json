{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		".env.production",
		".env.development",
		"tsconfig.json"
	],
	"tasks": {
		"client#dev": {
			"cache": false
		},
		"client#build": {
			"dependsOn": ["voby-unplugin#build"],
			"inputs": ["src/**", "public/**", "rsbuild.config.ts"],
			"outputs": ["dist/client/**"]
		},
		"server#dev": {
			"cache": false
		},
		"server#build": {
			"dependsOn": ["voby-unplugin#build"],
			"inputs": ["src/**", "../client/src/**", "../client/public/**", "rsbuild.config.ts"],
			"outputs": ["dist/server/**"]
		},
		"server#watch": {
			"passThroughEnv": ["PORT"],
			"persistent": true
		},
		"server#start": {
			"persistent": true
		},
		"voby-unplugin#dev": {
			"persistent": true
		},
		"voby-unplugin#build": {
			"inputs": ["src/**", "rsbuild.config.ts"],
			"outputs": ["dist/**"]
		}
	}
}
